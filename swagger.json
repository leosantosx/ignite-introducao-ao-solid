{
    "openapi": "3.0.0",
    "info": {
      "title": "Gerenciamento de usuários",
      "description": "",
      "version": "1.0.0",
      "contact": {
        "email": "leonardo@santos.com.br"
      }
    },
    "tags": [
      {
        "name": "Users",
        "description": "Controle de usuários"
      }
    ],
    "paths": {
      "/users": {
        "post": {
          "tags": ["Users"],
          "summary": "Cria um novo usuário",
          "description": "Cria um novo usuário com `name` e `email`  ",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "name": "Rocketseat",
                    "email": "oi@rocketseat.com.br"
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "descripiton": "Created",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "admin": {
                        "type": "boolean"
                      },
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "date"
                      },
                      "updated_at": {
                        "type": "date"
                      }
                    },
                    "example": {
                      "admin": false,
                      "id": "38ab4505-db46-42ab-a95a-a981343a3c94",
                      "name": "Rocketseat",
                      "email": "oi@rocketseat.com.br",
                      "created_at": "2021-03-20T14:06:10.530Z",
                      "updated_at": "2021-03-20T14:06:10.530Z"
                    }
                  }
                }
              }
            },
            "400": {
              "description": "User not created",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "message"
                      }
                    },
                    "example": {
                      "error": "This email is alrealdy exists!"
                    }
                  }
                }
              }
            }
          }
        },
        "get": {
          "tags": ["Users"],
          "summary": "Lista todos os usuários",
          "description": "Somente usuários `admin` podem acessar",
          "parameters": [
            {
              "name": "user_id",
              "in": "header",
              "description": "ID do usuário",
              "required": true,
              "schema": {
                "type": "string",
                "format": "uuid"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Listando todos os usuários",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "admin": {
                        "type": "boolean"
                      },
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "date"
                      },
                      "updated_at": {
                        "type": "date"
                      }
                    },
                    "example": [
                      {
                        "admin": false,
                        "id": "38ab4505-db46-42ab-a95a-a981343a3c94",
                        "name": "Rocketseat",
                        "email": "oi@rocketseat.com.br",
                        "created_at": "2021-03-20T14:06:10.530Z",
                        "updated_at": "2021-03-20T14:06:10.530Z"
                      },
                      {
                        "id": "4520f9f0-113e-43fb-a9b2-6668e88e0b8e",
                        "admin": true,
                        "name": "Ivo",
                        "email": "ivo@rocketseat.com.br",
                        "created_at": "2021-03-20T15:36:50.203Z",
                        "updated_at": "2021-03-20T15:36:50.203Z"
                      }
                    ]
                  }
                }
              }
            },
            "400": {
              "description": "Usuário sem permissões para realizar está operação",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "message"
                      }
                    },
                    "example": {
                      "error": "This user is not admin"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/users/{user_id}": {
        "get": {
          "tags": ["Users"],
          "summary": "Lista um usuário expecifico",
          "description": "Recebe o `user_id` e apresenta seus dados",
          "parameters": [
            {
              "name": "user_id",
              "in": "path",
              "description": "ID do usuário",
              "required": true,
              "schema": {
                "type": "string",
                "format": "uuid"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Operação realizada com sucesso",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "admin": {
                        "type": "boolean"
                      },
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "date"
                      },
                      "updated_at": {
                        "type": "date"
                      }
                    },
                    "example": {
                      "id": "364dcbeb-4a52-44fd-8320-01649443c4ba",
                      "admin": false,
                      "name": "Ivo",
                      "email": "ivo@rocketseat.com.br",
                      "created_at": "2021-03-20T15:56:02.340Z",
                      "updated_at": "2021-03-20T15:56:02.340Z"
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Usuário não encontrado",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "message"
                      }
                    },
                    "example": {
                      "error": "This user is not exists, please verify id of user"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/users/{user_id}/admin": {
        "patch": {
          "tags": ["Users"],
          "summary": "Torna um usuário comum para administrador",
          "description": "Recebe o `user_id` e torna o usuário correspondente em administrador ",
          "parameters": [
            {
              "name": "user_id",
              "in": "path",
              "description": "ID do usuário",
              "required": true,
              "schema": {
                "type": "string",
                "format": "uuid"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Operação realizada com sucesso",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "admin": {
                        "type": "boolean"
                      },
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "date"
                      },
                      "updated_at": {
                        "type": "date"
                      }
                    },
                    "example": {
                      "id": "364dcbeb-4a52-44fd-8320-01649443c4ba",
                      "admin": true,
                      "name": "Ivo",
                      "email": "ivo@rocketseat.com.br",
                      "created_at": "2021-03-20T15:56:02.340Z",
                      "updated_at": "2021-03-20T15:56:02.340Z"
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Usuário não encontrado",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "message"
                      }
                    },
                    "example": {
                      "error": "This user is not exists, please verify id of user"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }